<!DOCTYPE html>
<html>
  <head>
    <title>Tit</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <%- include("./css.ejs") %>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Mongo Explorer App</h1>
          <hr class="my-4">
          <p class="lead">Welcome to the mongo explorer</p>
        </div>
      </div>
      <div>
        <h2>Databases</h2>
        <%- include("./dbSelect.ejs") %>
        <button
          type="button"
          class="btn btn-secondary"
          onclick="collectionFunction()"
        >
          Button
        </button>
        <hr class="my-4">
      </div>
      <div id="colTitle" style="visibility: hidden">
        <h2>Collections</h2>
        <div>
          <label
            >Choose a database in order to display it's collections:
          </label>
        </div>
        <div>
          <select name="collections" id="collectionSelect"> </select>
          <button
            type="button"
            class="btn btn-secondary"
            onclick="docsFunction()"
          >
            but
          </button>
          <hr class="my-4">
        </div>
        <div id="docsBigDiv" style="visibility: hidden">
          <div>
            <h2 id="docsTitle">Documents</h2>
          </div>
          <div id="docsSmallDiv"></div>
          <button type="button" onclick="newDoc()" class="btn btn-primary">
            Create new entry
          </button>
        </div>
        <div id="newDoc" style="visibility: hidden">
          <h2 id="docsTitle">Create new document</h2>
          <form action="" id="docForm" method="POST" class="form-example">
            <div id="docFormInner"></div>
            <div>
              <button
                type="button"
                onclick="insertNewDoc()"
                class="btn btn-primary"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include("./bootstrapJS.ejs") %> <%- include("./javaScripts.ejs") %>
  </body>
</html>